<div class="w-full h-[100vh] flex justify-center items-center">
    <div class="rounded-md border-2 border-white text-white py-5 px-3 flex flex-col"> <!--outer container -->
        <form action="/applyJob/<%=id%>" method="post" enctype="multipart/form-data">
            <div class="flex justify-center items-center mb-6">apply in less than 1 minute</div>
            <div class="flex flex-col gap-y-3 mb-6 ml-6 w-[80%]">
                <div class="flex justify-between">
                    <label for="name">Name : </label>
                    <input type="text" id="name" name="name" class="border-2 border-blue-500 px-3 py-1 rounded-md">
                </div>
                <div class="flex justify-between">
                    <label for="email">Email : </label>
                    <input type="email" id="email" name="email" class="border-2 border-blue-500 px-3 py-1 rounded-md">
                </div>
                <div class="flex justify-between">
                    <label for="contact">Contact : </label>
                    <input type="tel" id="contact" name="contact" class="border-2 border-blue-500 px-3 py-1 rounded-md">
                </div>
                <div class="flex justify-between">
                    <label for="resume">Resume : </label>
                    <input type="file" id="resume" name="resume" class="border-2 border-blue-500 rounded-md w-[65%]">
                </div>
            </div>
            <div class="w-full flex justify-center">
                <button type="submit" class="rounded-md px-3 py-1 bg-blue-500 text-white">Submit</button>
            </div>
        </form>
    </div>
</div>